<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/cadastro_dono"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.example.s2pet.s2pet.Views.Cadastro_Dono">

    <TextView
        android:id="@+id/lblDono"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Nome do Dono" />

    <EditText
        android:id="@+id/nomeDono"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/lblDono"
        android:hint="Nome do dono" />

    <TextView
        android:id="@+id/lblCpf"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="CPF "
        android:layout_below="@id/nomeDono"/>

    <EditText
        android:id="@+id/NumCpf"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/lblCpf"
        android:hint="Numero do CPF"/>


    <TextView
        android:id="@+id/lblEmail"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Email"
        android:layout_below="@id/NumCpf"/>

    <EditText
        android:id="@+id/EndEmail"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/lblEmail"
        android:hint="Email"/>



    <TextView
        android:id="@+id/lblAnimal"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/EndEmail"
        android:text="Nome do Pet" />

    <EditText
        android:id="@+id/nomePet"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/lblAnimal"
        android:hint="Nome do pet" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Vacina"
        android:id="@+id/lblVacina"
        android:layout_below="@id/nomePet"/>

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:hint="Vacina"
        android:id="@+id/Vacina"
        android:layout_below="@id/lblVacina"/>

    <Button
        android:id="@+id/btnAdicionar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/Vacina"
        android:onClick="adicionarVacina"
        android:text="Adicionar Vacina" />


    <TextView
        android:id="@+id/lbllista"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="15dp"
        android:text="Lista de Vacinas"
        android:layout_below="@id/btnAdicionar"/>

    <TextView
        android:id="@+id/listaVacinas"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/lbllista"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="10dp" />


    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:text="Cadastrar"
        android:onClick="salvarDados"
        android:id="@+id/button2" />

    <EditText
        android:id="@+id/telefone"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/rg"
        android:layout_marginTop="30dp"
        android:ems="8"
        android:hint="Telefone"
        android:inputType="number"
        android:textColor="@color/colorPrimary" />

    <EditText
        android:id="@+id/rg"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/edit_nome"
        android:ems="9"
        android:hint="RG"
        android:inputType="number"
        android:textColor="@color/colorPrimary" />

    <EditText
        android:id="@+id/cpf"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:layout_below="@+id/edit_nome"
        android:ems="9"
        android:hint="CPF"
        android:inputType="number"
        android:textColor="@color/colorPrimary" />

    <EditText
        android:id="@+id/celular"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBaseline="@+id/telefone"
        android:layout_alignBottom="@+id/telefone"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:ems="8"
        android:hint="Celular"
        android:inputType="number"
        android:textColor="@color/colorPrimary" />

    <EditText
        android:id="@+id/cep"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/email"
        android:layout_marginTop="21dp"
        android:ems="10"
        android:hint="CEP"
        android:inputType="number"
        android:textColor="@color/colorPrimary" />

    <EditText
        android:id="@+id/email"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/telefone"
        android:layout_marginTop="25dp"
        android:ems="17"
        android:hint="E-mail"
        android:inputType="textEmailAddress"
        android:textColor="@color/colorPrimary" />

    <EditText
        android:id="@+id/endereco"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/cep"
        android:layout_marginTop="25dp"
        android:ems="17"
        android:hint="EndereÃ§o"
        android:inputType="textAutoComplete"
        android:textColor="@color/colorPrimary" />

    <EditText
        android:id="@+id/complemento"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/endereco"
        android:layout_marginTop="30dp"
        android:ems="8"
        android:hint="complemento"
        android:inputType="number"
        android:textColor="@color/colorPrimary" />

    <EditText
        android:id="@+id/numero"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBaseline="@+id/complemento"
        android:layout_alignBottom="@+id/complemento"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:ems="8"
        android:hint="Numero"
        android:inputType="number"
        android:textColor="@color/colorPrimary" />

    <Button
        android:id="@+id/bt_cadastrar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginBottom="11dp"
        android:background="@color/colorPrimaryDark"
        android:text="Confirmar" />

    <EditText
        android:id="@+id/edit_nome"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginTop="12dp"
        android:ems="10"
        android:hint="Nome completo"
        android:inputType="textPersonName"
        android:textColor="@color/colorPrimary" />


</RelativeLayout>
