<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/cadastro_dono"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.example.s2pet.s2pet.Views.Cadastro_Dono">

    <EditText
        android:id="@+id/vacina"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/email"
        android:layout_marginTop="21dp"
        android:ems="10"
        android:hint="Vacina"
        android:inputType="text"
        android:textColor="@color/colorPrimary" />

    <Button
        android:id="@+id/bt_cadastrar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginBottom="11dp"
        android:background="@color/colorPrimaryDark"
        android:text="Cadastrar" />

    <EditText
        android:id="@+id/nomeDono"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="11dp"
        android:ems="10"
        android:hint="Nome Completo"
        android:inputType="textPersonName"
        android:textColor="@color/colorPrimary"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <EditText
        android:id="@+id/cpf"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:ems="9"
        android:hint="CPF"
        android:inputType="number"
        android:textColor="@color/colorPrimary"
        android:layout_alignBaseline="@+id/nomeDono"
        android:layout_alignBottom="@+id/nomeDono"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true" />

    <EditText
        android:id="@+id/email"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:ems="17"
        android:hint="E-mail"
        android:inputType="textEmailAddress"
        android:textColor="@color/colorPrimary"
        android:layout_below="@+id/NomePet"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginTop="16dp" />

    <EditText
        android:id="@+id/endereco"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:ems="17"
        android:hint="EndereÃ§o"
        android:inputType="textAutoComplete"
        android:textColor="@color/colorPrimary"
        android:layout_below="@+id/nomeDono"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <Button
        android:id="@+id/bt_adicionarVacina"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/colorPrimaryDark"
        android:text="Adicionar vacina"
        android:layout_marginTop="19dp"
        android:layout_below="@+id/vacina"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <EditText
        android:id="@+id/listaVac"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Lista de vacinas"
        android:inputType="text|textAutoCorrect|textMultiLine|textImeMultiLine|textLongMessage"
        android:textColor="@color/colorPrimary"
        android:layout_alignTop="@+id/bt_adicionarVacina"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginTop="48dp"
        android:layout_above="@+id/bt_cadastrar" />

    <EditText
        android:id="@+id/NomePet"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:ems="9"
        android:hint="Nome do pet"
        android:inputType="number"
        android:textColor="@color/colorPrimary"
        android:layout_below="@+id/endereco"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginTop="12dp" />


</RelativeLayout>
