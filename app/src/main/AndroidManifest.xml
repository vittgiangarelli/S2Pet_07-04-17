<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.s2pet.s2pet">

    <!-- To auto-complete the email text field in the login form with the user's emails -->
    <uses-permission android:name="android.permission.GET_ACCOUNTS" />
    <uses-permission android:name="android.permission.READ_PROFILE" />
    <uses-permission android:name="android.permission.READ_CONTACTS" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/nome_app"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity android:name=".Views.Splash">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <activity android:name=".Views.Home" />

        <activity android:name=".Views.Login" />
        <activity android:name=".Views.Contato" />
        <activity android:name=".Views.Cadastro_Dono" />
        <activity android:name=".Views.Cadastro_Pet" />
        <activity android:name=".Views.Inicial" />
        <activity android:name=".Views.Perfil" />
        <activity android:name=".Views.Vacina" />
        <activity
            android:name=".Views.activity_login"
            android:label="@string/title_activity_login" />
        <activity
            android:name=".Views.MenuPrincipal"
            android:label="@string/title_activity_menu_principal"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity
            android:name=".Views.MenuLateral"
            android:label="@string/title_activity_menu_lateral"
            android:theme="@style/AppTheme.NoActionBar"></activity><!-- ATTENTION: This was auto-generated to add Google Play services to your project for
     App Indexing.  See https://g.co/AppIndexing/AndroidStudio for more information. -->
        <meta-data
            android:name="com.google.android.gms.version"
            android:value="@integer/google_play_services_version" />
    </application>
</manifest>